<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root" android:background="#d4e0e5" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/umeng_socialize_share_titlebar" android:background="#0086dc" android:layout_width="match_parent" android:layout_height="54dp">
        <TextView android:textSize="18sp" android:textColor="#ffffff" android:id="@+id/umeng_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_centerInParent="true"/>
        <RelativeLayout android:id="@+id/umeng_back" android:visibility="visible" android:layout_width="50dp" android:layout_height="match_parent" android:onClick="onCancel">
            <ImageButton android:background="@drawable/umeng_socialize_back_icon" android:clickable="false" android:layout_width="12dp" android:layout_height="20dp" android:layout_marginLeft="15dp" android:scaleType="center" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:textSize="15sp" android:textColor="#ffffff" android:gravity="center_vertical" android:id="@+id/umeng_share_btn" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="分享" android:layout_alignParentRight="true" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <EditText android:textSize="15sp" android:textColor="#000000" android:gravity="top" android:id="@+id/umeng_socialize_share_edittext" android:background="#ffffff" android:paddingLeft="15dp" android:paddingTop="8dp" android:paddingRight="15dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="180dp" android:bufferType="spannable" android:hint="编辑分享内容" android:layout_below="@+id/umeng_socialize_share_titlebar" android:lineSpacingExtra="3dp"/>
    <TextView android:textSize="14sp" android:textColor="#98999b" android:gravity="right" android:id="@+id/umeng_socialize_share_word_num" android:background="#ffffff" android:paddingRight="15dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/umeng_socialize_share_edittext" android:layout_alignRight="@+id/umeng_socialize_share_edittext"/>
    <RelativeLayout android:id="@+id/umeng_socialize_share_bottom_area" android:background="#f2f5f6" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_below="@+id/umeng_socialize_share_word_num">
        <RelativeLayout android:id="@+id/umeng_image_edge" android:background="@drawable/umeng_socialize_edit_bg" android:layout_width="62dp" android:layout_height="62dp" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:layout_marginBottom="15dp" android:layout_centerVertical="true">
            <ImageView android:id="@+id/umeng_share_icon" android:layout_width="60dp" android:layout_height="60dp" android:src="#2c3035" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView android:textSize="14sp" android:textColor="#575a5c" android:id="@+id/umeng_web_title" android:visibility="gone" android:layout_width="280dp" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="20dp" android:singleLine="true" android:layout_toRightOf="@+id/umeng_image_edge"/>
        <ImageView android:id="@+id/umeng_del" android:background="@drawable/umeng_socialize_delete" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="-10dp" android:layout_marginRight="-10dp" android:layout_alignTop="@+id/umeng_image_edge" android:layout_alignRight="@+id/umeng_image_edge"/>
    </RelativeLayout>
</RelativeLayout>
