<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <solid android:color="#b3000000"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <solid android:color="#14000000"/>
            <stroke android:width="1px" android:color="#26000000"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <solid android:color="#e6000000"/>
            <stroke android:width="1px" android:color="#33000000"/>
        </shape>
    </item>
</selector>
