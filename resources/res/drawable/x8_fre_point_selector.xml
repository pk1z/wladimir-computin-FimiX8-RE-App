<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1px" android:color="#00ffff"/>
            <corners android:radius="3dp"/>
            <solid android:color="#00000000"/>
        </shape>
    </item>
    <item android:state_enabled="false" android:state_selected="false">
        <shape>
            <stroke android:width="1px" android:color="@color/white_50"/>
            <corners android:radius="3dp"/>
            <solid android:color="#00000000"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1px" android:color="@color/white_100"/>
            <corners android:radius="3dp"/>
            <solid android:color="#00000000"/>
        </shape>
    </item>
</selector>
